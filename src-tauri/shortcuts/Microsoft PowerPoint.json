        },
        { "command": { "win": "Ctrl+D", "mac": "Ctrl+D", "linux": "Ctrl+D" }, "description": "复制对象" },
        { "command": { "win": "Ctrl+Z", "mac": "Ctrl+Z", "linux": "Ctrl+Z" }, "description": "撤消最后一个操作" },
        { "command": { "win": "Ctrl+Y", "mac": "Ctrl+Y", "linux": "Ctrl+Y" }, "description": "恢复最后一个操作" },
        {
          "command": { "win": "Ctrl+Shift+C", "mac": "Ctrl+Shift+C", "linux": "Ctrl+Shift+C" },
          "description": "只复制格式"
        },
        {
          "command": { "win": "Ctrl+Shift+V", "mac": "Ctrl+Shift+V", "linux": "Ctrl+Shift+V" },
          "description": "只粘贴格式"
        },
        {
          "command": { "win": "Alt+Shift+C", "mac": "Alt+Shift+C", "linux": "Alt+Shift+C" },
