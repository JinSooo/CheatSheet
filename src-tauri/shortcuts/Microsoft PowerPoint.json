        },
        {
          "command": { "win": "Alt+Shift+V", "mac": "Alt+Shift+V", "linux": "Alt+Shift+V" },
          "description": "粘贴动画刷"
        },
        {
          "command": { "win": "Ctrl+Alt+V", "mac": "Ctrl+Alt+V", "linux": "Ctrl+Alt+V" },
