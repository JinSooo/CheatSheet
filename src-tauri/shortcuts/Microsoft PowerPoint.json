    },
    {
      "name": "使用功能区选项卡的访问键",
      "shortcuts": [
        {
          "command": { "win": "Alt+Q", "mac": "Option+Q", "linux": "Alt+Q" },
          "description": "移动到功能区上的“搜索”字段，然后键入搜索词以查找帮助或帮助内容"
        },
        {
          "command": { "win": "Alt+F", "mac": "Option+F", "linux": "Alt+F" },
          "description": "打开“文件”菜单"
        },
        {
          "command": { "win": "Alt+H", "mac": "Option+H", "linux": "Alt+H" },
          "description": "打开“主页”选项卡并设置幻灯片、字体、段落或绘图的格式"
        },
        {
          "command": { "win": "Alt+N", "mac": "Option+N", "linux": "Alt+N" },
          "description": "打开“插入”选项卡并插入幻灯片、表格、图像、插图、窗体、链接、文本、符号或媒体"
        },
        {
          "command": {
            "win": "Alt+J, I",
            "mac": "Option+J, I",
            "linux": "Alt+J, I"
          },
          "description": "打开“绘图”选项卡并访问绘图工具"
        },
        {
          "command": { "win": "Alt+G", "mac": "Option+G", "linux": "Alt+G" },
          "description": "打开“设计”选项卡，应用主题并自定义幻灯片"
        },
        {
          "command": { "win": "Alt+K", "mac": "Option+K", "linux": "Alt+K" },
          "description": "打开“切换”选项卡，在幻灯片之间添加切换效果"
        },
        {
          "command": { "win": "Alt+A", "mac": "Option+A", "linux": "Alt+A" },
          "description": "打开“动画”选项卡，向幻灯片添加动画"
        },
        {
          "command": { "win": "Alt+S", "mac": "Option+S", "linux": "Alt+S" },
          "description": "打开“幻灯片放映”选项卡，设置和播放幻灯片放映"
        },
        {
          "command": { "win": "Alt+R", "mac": "Option+R", "linux": "Alt+R" },
          "description": "打开“审阅”选项卡，检查拼写和辅助功能并添加批注"
        },
        {
          "command": { "win": "Alt+W", "mac": "Option+W", "linux": "Alt+W" },
          "description": "打开“视图”选项卡和预览演示文稿布局、显示和隐藏网格线和参考线、设置缩放缩放、管理窗口和查看宏"
        },
        {
          "command": { "win": "Alt+C", "mac": "Option+C", "linux": "Alt+C" },
          "description": "打开“录制”选项卡，在演示文稿中管理屏幕录制、音频和视频"
        },
        {
          "command": {
            "win": "Alt+Y, 2",
            "mac": "Option+Y, 2",
            "linux": "Alt+Y, 2"
          },
          "description": "打开“帮助”选项卡并浏览 PowerPoint ，联系支持人员并留下反馈"
        }
      ]
    },
    {
      "name": "通过键盘使用功能区",
      "shortcuts": [
        {
          "command": {
            "win": "Tab or Shift+Tab",
