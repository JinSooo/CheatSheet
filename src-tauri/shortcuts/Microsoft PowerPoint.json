{
  "$schema": "./template/shortcut.schema.json",
  "name": "Microsoft PowerPoint",
  "categories": [
    {
      "name": "常用快捷键",
      "shortcuts": [
        {
          "command": { "win": "Ctrl+N", "mac": "Command+N", "linux": "Ctrl+N" },
          "description": "创建新演示文稿"
        },
        {
          "command": { "win": "Ctrl+M", "mac": "Command+M", "linux": "Ctrl+M" },
          "description": "添加新幻灯片"
        },
        {
          "command": { "win": "Ctrl+B", "mac": "Command+B", "linux": "Ctrl+B" },
          "description": "使所选文字加粗"
        },
        {
          "command": {
            "win": "Alt+H, F, S",
            "mac": "Option+H, F, S",
            "linux": "Alt+H, F, S"
          },
          "description": "更改所选文字的字号"
        },
        {
