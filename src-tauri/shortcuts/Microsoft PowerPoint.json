        },
        {
          "command": {
            "win": "Alt+G, H",
            "mac": "Option+G, H",
            "linux": "Alt+G, H"
          },
          "description": "选择主题"
        },
        {
          "command": {
            "win": "Alt+H, L",
            "mac": "Option+H, L",
            "linux": "Alt+H, L"
          },
          "description": "选择幻灯片布局"
