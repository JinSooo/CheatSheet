        },
        {
          "command": { "win": "Shift+↓", "mac": "Shift+↓", "linux": "Shift+↓" },
          "description": "选择下一行（前提是光标位于行的开头）"
        },
        { "command": { "win": "Esc", "mac": "Esc", "linux": "Esc" }, "description": "选择对象内的文本时，选择对象" },
        {
          "command": { "win": "Tab or Shift+Tab", "mac": "Tab or Shift+Tab", "linux": "Tab or Shift+Tab" },
          "description": "选择一个对象时选择另一个对象"
        },
        { "command": { "win": "Ctrl+[", "mac": "Ctrl+[", "linux": "Ctrl+[" }, "description": "将对象向后发送一个位置" },
        { "command": { "win": "Ctrl+]", "mac": "Ctrl+]", "linux": "Ctrl+]" }, "description": "将对象向前发送一个位置" },
        {
          "command": { "win": "Ctrl+Shift+[", "mac": "Ctrl+Shift+[", "linux": "Ctrl+Shift+[" },
          "description": "将对象置于底层"
        },
        {
          "command": { "win": "Ctrl+Shift+]", "mac": "Ctrl+Shift+]", "linux": "Ctrl+Shift+]" },
          "description": "将对象发送到顶层"
        },
        { "command": { "win": "Enter", "mac": "Enter", "linux": "Enter" }, "description": "选择对象内的文本" },
        { "command": { "win": "Ctrl+A", "mac": "Ctrl+A", "linux": "Ctrl+A" }, "description": "选择幻灯片上的所有对象" },
        {
          "command": { "win": "Ctrl+Spacebar", "mac": "Ctrl+Spacebar", "linux": "Ctrl+Spacebar" },
          "description": "播放或暂停媒体"
        },
        {
          "command": { "win": "Ctrl+A", "mac": "Ctrl+A", "linux": "Ctrl+A" },
          "description": "在“幻灯片浏览”视图或缩略图窗格中选择所有幻灯片"
        }
      ]
    },
    {
      "name": "删除和复制文本和对象",
      "shortcuts": [
        {
          "command": { "win": "Backspace", "mac": "Backspace", "linux": "Backspace" },
          "description": "向左删除一个字符"
        },
        {
          "command": { "win": "Ctrl+Backspace", "mac": "Ctrl+Backspace", "linux": "Ctrl+Backspace" },
          "description": "向左删除一个字词"
        },
        { "command": { "win": "Delete", "mac": "Delete", "linux": "Delete" }, "description": "向右删除一个字符" },
        {
          "command": { "win": "Ctrl+Delete", "mac": "Ctrl+Delete", "linux": "Ctrl+Delete" },
