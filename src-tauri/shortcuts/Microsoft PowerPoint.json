        { "command": { "win": "Ctrl+X", "mac": "Ctrl+X", "linux": "Ctrl+X" }, "description": "剪切选定的对象或文本" },
        { "command": { "win": "Ctrl+C", "mac": "Ctrl+C", "linux": "Ctrl+C" }, "description": "复制选定的对象或文本" },
        {
          "command": { "win": "Ctrl+V", "mac": "Ctrl+V", "linux": "Ctrl+V" },
