{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../out"
  },
  "package": {
    "productName": "CheatSheet",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "globalShortcut": {
        "all": true
      },
      "app": {
        "hide": true,
        "show": true
      },
      "window": {
        "hide": true,
        "show": true,
        "setAlwaysOnTop": true,
        "setSize": true,
        "center": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "scope": ["**"]
      },
      "os": {
        "all": true
      },
      "notification": {
        "all": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "open": true
      },
      "dialog": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
      "identifier": "com.jinso.cheatsheet",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": ["./shortcuts"],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": "zh-CN"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": ["https://github.com/JinSooo/CheatSheet/releases/download/updater/update.json"],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJFQ0Q3MkU5MDAyNTE5REMKUldUY0dTVUE2WExOTGdzNklCRkM3WUxKcWRyK21nWVhaTGxOTHJyaFZsZTU5WGxwTzZza3hCWU8K"
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": false,
        "transparent": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "acceptFirstMouse": true,
        "decorations": false,
        "center": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false
      }
    ],
    "macOSPrivateApi": true,
    "systemTray": {
      "iconPath": "icons/tray.png",
      "iconAsTemplate": true
    }
  }
}
